@model ForgotPasswordVM

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="d-flex justify-content-center form_container">
    <form asp-action="ForgotPassword">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-group mb-3">
            <div class="input-group-append">
                <label asp-for="Email" class="input-group-text"><i class="fas fa-envelope"></i></label>
            </div>
            <input asp-for="Email" class="form-control" placeholder="email address" />
        </div>
        <div class="input-group mb-3">
            <span asp-validation-for="Email" class="form-text text-white"></span>
        </div>
        <div class="d-flex justify-content-center mt-3 login_container">
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
